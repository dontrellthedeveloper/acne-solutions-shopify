{% comment %}
Renders product share options on product page

  Usage:
    {% render 'product_share' %}
{% endcomment %}

<div class="social-sharing" data-permalink="{{ product.url }}">
  <span class="social-sharing__title">{{ 'general.social.share_on_facebook' | t }}</span>

  {%- if settings.share_facebook -%}
    <a href="//www.facebook.com/sharer.php?u={{ shop.url | append: product.url }}" target="_blank" class="social-sharing__link facebook" title="{{ 'general.social.alt_text.share_on_facebook' | t }}">
      {% render 'icon-facebook' %}
    </a>
  {%- endif -%}

  {%- if settings.share_twitter -%}
    <a href="//twitter.com/share?text={{ product.title | url_param_escape }}&amp;url={{ shop.url | append: product.url }}" target="_blank" class="social-sharing__link twitter" title="{{ 'general.social.alt_text.share_on_twitter' | t }}">
      {% render 'icon-twitter' %}
    </a>
  {%- endif -%}

  {%- if settings.share_pinterest -%}
    <a href="//pinterest.com/pin/create/button/?url={{ shop.url | append: product.url }}&amp;media={{ product.featured_image | img_url: '1024x1024' }}&amp;description={{ product.title | url_param_escape }}" target="_blank" class="social-sharing__link pinterest" title="{{ 'general.social.alt_text.share_on_pinterest' | t }}">
      {% render 'icon-pinterest' %}
    </a>
  {%- endif -%}
</div>
