// = Lookbook Slideshow 2
.slideshow-lookbook-2 {
  .medium-6 {
    order: 2;
    position: relative;
    height: 100%;
  }

  .lookbook-product { z-index: 1; }

  .vertical {
    .product-card {
      max-width: 54.16667%;
      margin: 0 auto;
      padding: 1.5rem 0 3.5rem;
    }

    .product-detail { text-align: center; }

    .swatch-group,
    .product-info,
    .spr-badge {
