// Product tab table
.product-details-tabs {
  table {
    width: 100%;
    border-top: 1px solid #efefef;
    border-left: 1px solid #efefef;
  }

  tr:nth-of-type(even) {
    background-color: #fbfbfb;
  }

  th,
  td {
    height: 40px;
    padding-left: 30px;
    border-right: 1px solid #efefef;
    border-bottom: 1px solid #efefef;
  }
}

@media all and (min-width: 768px) {
  .tabs {
    flex-direction: row;
    -ms-flex-direction: row;
    min-height: 350px;
  }

  .product-details-tabs .tabs-nav {
    width: 280px;
    min-width: 280px;

    .tabs-nav__item:last-child {
      display: list-item;
      height: 100%;
      min-height: 80px;
    }
  }

  .btn-wishlist,
  .btn-compare {
    &:hover {
      background-color: #91dbff;
      border-color: #91dbff;

      svg { fill: #fff }
    }
  }
}

@media all and (max-width: 991px) {
  .tabs-content { padding: 32px 40px; }
}

@media all and (max-width: 767px) {
  .product-img-area.thumbs-bottom { display: block }

  .product-layout .product-main { display: block; }

  .product-img-area.thumbs-bottom .product-thumb { margin-right: 10px; }

  .tabs-nav__item a { padding: 12px 28px; }
  .tabs-content { padding: 16px 28px; }
}

@media all and (max-width: 575px) {
  .mfp-product-gallery {
    .mfp-arrow-right { right: 10px; }
    .mfp-arrow-left { left: 10px; }

    .mfp-close {
      top: 6px;
      right: -4px;
      width: 28px;
      height: 28px;
      line-height: 28px;
    }
  }
}