/*=============================================================*/
/*====================== Cart Page Style ======================*/
/*=============================================================*/
.sale-info {
  color: #818181;
  font-size: 1.6rem;
  margin-bottom: 2.4rem
}

.cart-template {
  .sidebar {
    .btn {
      width: 100%;
      margin-bottom: 2rem;
      font-size: 1.2rem;
      text-transform: uppercase
    }

    label {
      display: inline-block;
      margin: 15px 0 10px
    }
  }

  .expandable {
    padding: 20px 20px 10px;
    border: 1px solid #efefef;
    border-top: 0;
    font-family: Arial, sans-serif;
    font-size: 1.4rem
  }

  .btn-default {
    height: 40px;
    padding: 0 24px
  }
}

.cart-header {
  padding: 19px 30px;
  border: 1px solid #efefef;
  border-bottom: 0;
  font-family: $font-heading;
  font-size: 1.3rem;
  font-weight: 400;
  letter-spacing: .2em;
  text-transform: uppercase
}

.cart-list {
  padding: 0 30px;
  border: 1px solid #efefef;
  border-spacing: 0;

  .cart-item {
    margin: 0;
    padding: 19px 0;
    border-bottom: 1px solid #efefef
  }
}

.cart-list__wrapper {
  .cart-list__img {
    width: 150px;
    min-width: 150px;
    margin-left: 0;
    margin-right: 20px
  }

  .cart-list__name {
    flex-grow: 1;
    -ms-flex-positive: 1;
  }

  .product-name {
    font-size: 15px
  }

  .cart-product__options {
    margin-top: 10px;
    color: #a6a6a6;
    font-family: Arial, Helvetica, sans-serif;
    font-size: 1.2rem
  }

  .product-price {
    width: 100px;
    min-width: 100px
  }

  .product-qty {
    width: 100px
  }

  .qty-control {
    min-width: 100px;
    padding: 0
  }

  .cart-actions {
    width: 51px;
    min-width: 51px;
    margin-right: 0
  }

  .edit,
  .remove {
    padding: 5px
  }

  svg { display: block; }

  .edit svg {
    width: 12px;
    height: 12px;
    fill: #c6c6c6
  }

  .remove {
    margin-left: 10px;
    color: #b1b1b1;

    svg { width: 9px }
  }

}

.cart-item__info {
  flex-grow: 1;
  -ms-flex-positive: 1;
}

.cart-header > *,
.cart-item__info > div {
  margin: 0 20px
}

.buttons-container {
  padding-bottom: 20px;

  .btn {
    margin-top: 20px;
    font-size: 1.2rem;
    text-transform: uppercase
  }
}

.cart-note {
  margin-top: 30px;
  margin-bottom: 130px;

  label,
  textarea {
    display: block;
    width: 100%;
    padding: 19px 30px;
    border: 1px solid #efefef;
    line-height: 19px
  }

  label {
    height: 57px;
    border-bottom: 0;
    background-color: #fafafa;
    color: #555;
    font-family: $font-heading;
    font-size: 1.3rem;
    font-weight: 700;
    letter-spacing: .2em;
    text-transform: uppercase
  }

  textarea {
    min-height: 140px
  }
}

.shipping,
.cart-summary {
  margin-bottom: 30px
}

.expander {
  cursor: pointer;
}

.cart-summary__title,
.shipping-title {
  padding: 16px 20px;
  border: 1px solid #efefef;
  font-size: 1.2rem;
  letter-spacing: .2em;
  text-align: center;
  text-transform: uppercase;

  svg {
    width: 8px;
    height: 8px;
    margin-left: auto;

    .shipping.opened &,
    .cart-summary.opened & {
      transform: rotate(180deg);
      -webkit-transform: rotate(180deg)
    }
  }
}

.shipping-description {
  color: #666;
  font-family: $font-body;
  font-size: 1.5rem;
  font-weight: 400;
  line-height: 2rem
}

#shipping-calculator {
  input[type='text'],
  select {
    width: 100%;
    height: 38px;
    padding: 0 15px;
    border: 1px solid #e4e2e2;
    color: #666;
    font-family: Arial, sans-serif;
    font-size: 1.2rem;
    letter-spacing: .1em
  }

  .get-rates {
    margin-top: 25px
  }

  .error {
    margin-bottom: 10px;
    color: red
  }

  .success {
    margin-bottom: 10px
  }
}

.summary-total {
  padding: 15px 0 25px;
  border-top: 1px solid #f0f0f0
}

.summary-item {
  margin: 20px 0
}

.cart-empty {
  max-width: 350px;
  margin: 30px auto 130px;
  padding: 20px 50px;
  border: 2px solid #efefef;
  font-size: 18px;
  line-height: 36px;

  .btn-default {
    margin-top: 20px
  }
}

@media (min-width: 992px) {
  @media (max-width: 1199px) {
    .cart-header > *,
    .cart-item__info > div {
      margin: 0 12px
    }

    .cart-header,
    .cart-list {
      padding-right: 12px;
      padding-left: 12px
    }

    .cart-list__wrapper .cart-list__img {
      width: 120px;
      min-width: 120px
    }
  }
}

@media (max-width: 767px) {
  .page-title { font-size: 2.5rem; }

  .cart-header > *,
  .cart-item__info > div {
    margin: 0 12px
  }

  .cart-header,
  .cart-list {
    padding-right: 12px;
    padding-left: 12px
  }

  .cart-list__wrapper {
    .cart-list__img {
      width: 120px;
      min-width: 120px;
      margin-right: 12px
    }

    .qty-control {
      width: 75px;
      min-width: 75px
    }

    .quantity {
      padding: 7px 18px
    }

    .reduce,
    .increase {
      width: 20px;
      padding: 9px 6px
    }
  }

  .cart-item__info {
    width: calc(100% - 160px)
  }

  .template-customer,
  .template-contact,
  #MainContent .shopify-challenge__container {
    margin-bottom: 70px;
  }
}

@media (max-width: 575px) {
  .cart-header {
    display: none
  }

  .cart-item__info > div {
    margin: 6px 12px
  }

  .cart-item__info {
    display: block;

    .product-price {
      text-align: left
    }
  }

  .cart-item .qty-control,
  .cart-item .product-price {
    display: inline-block
  }
}

.template-customer,
.template-contact,
#MainContent .shopify-challenge__container {
  margin-top: 50px;
  margin-bottom: 150px;

  .contact-form {
    padding-top: 70px;
    padding-left: 20px;
